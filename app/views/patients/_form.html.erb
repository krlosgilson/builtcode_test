<%= form_with(model: patient) do |form| %>
  <% if patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(patient.errors.count, "error") %> ao tentar salvar:</h2>

      <ul>
        <% patient.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "Nome *".html_safe %>
    <%= form.text_field :name, maxlength: 100, required: true %>
  </div>

  <div class="field">
    <%= form.label :birth_date, "Data Nascimento *" %>
    <%= form.date_field :birth_date, required: true %>
  </div>

  <div class="field">
    <%= form.label :cpf, "CPF * <small>(somente n√∫meros)</small>".html_safe %>
    <%= form.text_field :cpf, maxlength: 11, required: true %>
  </div>

  <br>

  <div class="actions">
    <%= form.submit "Salvar" %>
  </div>
<% end %>
