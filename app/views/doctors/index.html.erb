<h1>Médicos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>CRM</th>
      <th>UF</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.name %></td>
        <td><%= doctor.crm %></td>
        <td><%= doctor.crm_uf %></td>
        <td><%= link_to 'Mostar', doctor %></td>
        <td><%= link_to 'Editar', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Excluir', doctor, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Médico', new_doctor_path %>
