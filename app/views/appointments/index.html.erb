<%= breadcrumbs({"Consultas": nil}) %>

<h4>Consultas</h4>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th>Horário</th>
      <th>Médico</th>
      <th>Paciente</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= date_br appointment.starts_at %></td>
        <td><%= starts_and_end_time appointment %></td>
        <td><%= appointment.doctor.name.titleize %></td>
        <td><%= appointment.patient.name.titleize %></td>
        <td>
          <%= link_to '<i class="material-icons">preview</i>'.html_safe, appointment, class: "waves-effect waves-light btn-flat btn-small", title: "Mostrar" %>
          <%= link_to '<i class="material-icons">edit</i>'.html_safe, edit_appointment_path(appointment), class: "waves-effect waves-yellow btn-flat btn-small", title: "Editar" %>
          <%= link_to '<i class="material-icons">delete</i>'.html_safe, appointment, class: "waves-effect waves-red btn-flat btn-small", title: "Excluir", method: :delete, data: { confirm: 'Você tem certeza?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to_new new_appointment_path %>